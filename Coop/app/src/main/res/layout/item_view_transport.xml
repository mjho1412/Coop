<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:contentPadding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_transparent_small"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_normal"
        android:paddingEnd="@dimen/space_normal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/text_view_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_transport"
            android:drawablePadding="@dimen/space_small"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="52F - 83093" />

        <TextView
            android:id="@+id/text_view_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_id_card"
            android:drawablePadding="@dimen/space_small"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/text_view_transport_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_barcode"
            android:drawablePadding="@dimen/space_small"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="12" />

        <TextView
            android:id="@+id/text_view_basket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_basket"
            android:drawablePadding="@dimen/space_small"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="12" />

        <TextView
            android:id="@+id/text_view_transport_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/colorAccent"
            tools:text="Đang chờ" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
